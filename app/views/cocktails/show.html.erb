<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <a class="navbar-brand" href="/cocktails">
    <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/logo.png" />
</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <a><%= link_to 'Add a cocktail', new_cocktail_path(@cocktail) %></a>
      </li>
    </ul>
  </div>
</div>

<div class="card-product">
  <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
  <div class="card-product-infos">
    <h2><%= @cocktail.name %></h2>
    <% @cocktail.doses.each do |dose| %>
      <li><%= dose.ingredient.name %></li>
      <!-- could be written as @cocktail.ingredients too-->
      <!-- wrong memo, need to show ingredient name with ingredient_id -->
      <li><%= dose.description %></li>

      <p><%= link_to 'Delete', dose_path(dose), method: :delete %></p>
    <% end %>
  </div>
</div>


